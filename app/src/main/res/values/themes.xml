<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RowingutApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/mainPurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="Test" parent="Theme.RowingutApp">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>

    <style name="HeaderTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/subtitleColor</item>
    </style>

    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mainPurple</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusTopStart">18dp</item>
    </style>

    <style name="BottombarIcon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:tint">@color/tint_color</item>
        <item name="android:background">@drawable/ripple</item>
    </style>


    <style name="CardTextStyle">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="TVUserParamsStyle">
        <item name="android:textSize">20sp</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>
    
    <style name="TVStartTraining">
        <item name="android:textColor">@color/text_color_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="TVStatistic">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_medium</item>

    </style>



</resources>
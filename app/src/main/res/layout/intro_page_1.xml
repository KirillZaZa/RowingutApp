<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_gym"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/ic_gym_illustration"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="116dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_content_1"
        android:layout_width="wrap_content"
        android:text="@string/onboarding_page_1_large"
        android:theme="@style/Theme.RowingutApp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/gilroy_medium"
        app:layout_constraintTop_toBottomOf="@id/img_gym"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_content_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_regular"
        android:maxLines="2"
        android:textAlignment="center"
        android:theme="@style/Theme.RowingutApp"
        android:text="@string/onboarding_page_1_small"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_1" />




</androidx.constraintlayout.widget.ConstraintLayout>
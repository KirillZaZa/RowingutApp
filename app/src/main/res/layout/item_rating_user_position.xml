<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBackground"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_rating_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="64dp"
        android:background="@drawable/shape_circle_image"
        android:layout_height="64dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_user_rating_name"
        style="@style/HeaderTextStyle"
        android:text="@string/text_rating_user_name"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/img_rating_user"
        app:layout_constraintBottom_toBottomOf="@id/img_rating_user"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toEndOf="@id/img_rating_user"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_user_calories"
        android:text="@string/text_calories_example"
        style="@style/SubtitleStyle"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_rating_name"
        app:layout_constraintStart_toEndOf="@id/img_rating_user"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_user_rating_position"
        style="@style/HeaderTextStyle"
        android:text="@string/text_rating_position"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_user_rating_up"
        app:layout_constraintStart_toEndOf="@id/tv_user_rating_position"
        app:layout_constraintTop_toTopOf="@id/tv_user_rating_position"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_rating_position"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_rating_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kirilldev.rowingutapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_gym_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.RowingutApp">
        <activity
            android:name=".presentation.registration.RegistrationActivity"
            android:exported="true">
        </activity>
        <activity android:name=".presentation.intro.RowingutIntroActivity">
        </activity>
        
        <activity android:name=".presentation.splashscreen.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>